<% page = "Sign up" %>

<div class="auth">
  <div class="auth__main">
    <h1 class="text--s2 text--bold">Sign up</h1>
    
    <form action="/register" method="POST" class="form">
      <div class="form__items">
        <input class="form__input" type="text" id="username" name="username" placeholder="Username" minlength="<%= usernameMin %>" maxlength="<%= usernameMax %>" value="<%= formData.username %>" required>

        <input class="form__input" type="text" id="email" name="email" placeholder="Email" minlength="<%= emailMin %>" maxlength="<%= emailMax %>" value="<%= formData.email %>" required>
    
        <input class="form__input" type="password" id="password" name="password" placeholder="Password" minlength="<%= passwordMin %>" maxlength="<%= passwordMax %>" required>
    
        <input class="form__input" type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" minlength="<%= passwordMin %>" maxlength="<%= passwordMax %>" required>
      </div>

      <!--<p>By creating an account, you agree to our <a href="/privacy">Privacy Policy</a>.</p>-->
    
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    
      <button class="btn btn--primary" type="submit">Sign up</button>
    
      <% if(error && error.message) { %>
        <p class="text text--center text--danger"><%= error.message %></p>
      <% } %>
    </form>
  </div>

  <aside class="auth__aside">
    <h2 class="text--s2 text--bold">Join Us!</h2>
    <p>Already have an account? Click below to sign in.</p>
    <a class="btn" href="/login">Sign in</a>
  </aside>
</div>
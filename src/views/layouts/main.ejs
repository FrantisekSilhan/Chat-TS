<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= page %> | <%= site %></title>

  <!-- Favicon -->
  <link rel="icon" href="/images/logo.ico" type="image/x-icon">
  <link rel="icon" href="/images/logo.png" type="image/png">
  <link rel="icon" href="/images/logo.svg" type="image/svg">

  <!-- Basic accessibility tags -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Basic SEO tags -->
  <meta name="url" content="https://www.slhn.cz/">
  <meta name="identifier-URL" content="https://www.slhn.cz/">
  <meta name="title" content="<%= page %> | <%= site %>">
  <meta name="description" content="I write code and do stuff">
  <meta name="keywords" content="slhn, developer, programmer, software">
  <% if (isError) { %>
    <meta name="robots" content="noindex, follow">
  <% } else { %>
    <meta name="robots" content="index, nofollow">
  <% } %>
  <meta name="author" content="František Šilhán">
  <meta name="reply-to" content="frantisek@slhn.cz">
  <meta name="language" content="en">
  <meta name="rating" content="general">
  <meta name="theme-color" content="#aaa3c2">
  
  <!-- Open Graph -->
  <meta property="og:url" content="https://www.slhn.cz/">
  <meta property="og:type" content="website">
  <meta property="og:title" content="<%= page %> | <%= site %>">
  <meta property="og:description" content="I write code and do stuff">
  <meta property="og:image" content="https://www.slhn.cz/images/logo.png">
  <meta property="og:site_name" content="slhn.cz">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:url" content="https://www.slhn.cz/">
  <meta name="twitter:site" content="@frantisekslhn">
  <meta name="twitter:title" content="<%= page %> | <%= site %>">
  <meta name="twitter:description" content="I write code and do stuff">
  <meta name="twitter:image" content="https://www.slhn.cz/images/logo.png">

  <!-- Styles -->
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <div class="site">
    <header>
      <nav class="navbar">
        <menu class="navbar__menu">
          <li class="navbar__item"><a class="navbar__link" href="/">Home</a></li>
          <li class="navbar__item"><a class="navbar__link" href="/about">About</a></li>
          <li class="navbar__item"><a class="navbar__link" href="/contact">Contact</a></li>
        </menu>
      </nav>
    </header>
    <main class="main">
      <%- body %>
    </main>
    <footer class="footer">
      <p>© 2024 slhn.cz</p>
    </footer>
  </div>
</body>
</html>
